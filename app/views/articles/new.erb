<h3>Create new article</h3>

<%= form_for([@category, @category.articles.build]) do  |f| %>
<p>
  <%= f.label :title  %>
  <%= f.text_field :title %> <br>
  <%= f.label :description  %>
  <%= f.text_area :description %> <br>
  <%= f.label :location  %>
  <%= f.text_field :location %> <br>
  <%= f.label :price %>
  <%= f.number_field :price %> <br>

  <%= f.label :email  %>
  <%= f.text_field :email %>
  <%= f.submit %>

</p>

<% end %>
